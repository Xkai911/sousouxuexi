swiper image{
  height: 100%;
  width: 100%;
}
.text{
  font-size: 18px;
  font-weight: 900;
}
.pushCourses{
  display: flex;
  justify-content:space-around 
}
.pushCourses view{
  
  line-height: 50px;
  width: 30%;
  text-align: center;
  border: 1px solid #000;
  background-color: deepskyblue;
  color: #fff
}
.info{
  margin-top: 15px;
  margin-bottom: 50px;
  border-top: 1px solid #333
}
.list{
  margin-left: 15px;
  margin-right: 15px;
  padding-top: 5px;
  padding-bottom: 5px;
  display: flex;
  border-bottom: 1px solid #333
  
}
.list image{
  height: 80px;
  width: 80px;
  border-radius: 100%
}
.name{
  font-size: 18px;
  font-weight: 900;
}
.price{
  text-align: right;
  color: deepskyblue;
}
.synopsis,.people{
  font-size: 12px;
  color: #333;
  line-height: 20px;
}
.footer{
  position: fixed;
  height: 45px;
  width: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-items: center;
  font-size: 16px
}
.footer view{
  flex:1;
  text-align: center;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.footer .bar{
  background-color: #000000;
  color:#fff;
}