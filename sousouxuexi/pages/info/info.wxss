/* pages/info/123.wxss */
.header{
  display: flex;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 10px
}
.inline{
  border-top: 1px solid #000
}
.header view{
  display: flex;
  flex-direction: column;
}
.title{
  flex: 3;
  line-height: 30px;
  font-size: 16px;
}
.title .titleName{
  font-weight: 900;
  font-size: 20px
}
.price{
  flex: 1;
  border: 1px solid #333;
  font-size: 14px;
  padding: 10px;
  line-height: 20px;
  text-align: center;
}
.info{
  margin-bottom: 45px;
  padding-left: 15px;
  padding-right: 15px
}
.info view{
  display: flex;
  flex-direction: column;
  padding-top: 10px
}
.info view text{
  font-size: 16px
}
.info view .textName{
  font-weight: 900
}

.footer{
  position: fixed;
  height: 45px;
  width: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-items: center
}
.footer view{
  flex:1;
  text-align: center;
  background-color: deepskyblue;
  color: #fff;
  line-height: 45px;
  border-left: 1px solid #000;
  border-top: 1px solid #000

}
.footer .bar{
  border-left: none
}